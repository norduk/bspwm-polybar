
[colors]
background = #2E3440
foreground = #e6e6e6
accent     = #88C0D0
black       = ${xrdb:Polybar.color0}
red         = ${xrdb:Polybar.color1}
green       = ${xrdb:Polybar.color2}
yellow      = ${xrdb:Polybar.color3}
blue        = ${xrdb:Polybar.color4}
magenta     = ${xrdb:Polybar.color5}
cyan        = ${xrdb:Polybar.color6}
white       = ${xrdb:Polybar.color7}

############                  MAINBAR-BSPWM                         ############

[bar/mainbar-bspwm]
monitor = ${env:MONITOR}
width = 100%
height = 30
radius = 0.0
fixed-center = true
bottom = false
separator = |

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

wm-restack = bspwm
override-redirect = true

enable-ipc = true

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 3
module-margin-right = 3


font-0 = "Noto Sans:size=8;0"
font-1 = "FontAwesome:size=9;0"
font-2 = "Noto Sans:size=8;0"
font-3 = "Noto Sans Mono:size=10;0"

modules-left = bspwm xwindow spotify1
modules-center = uptime date filesystem memory3
modules-right = pavolume cpu2 xkeyboard

tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-position = right
tray-background = ${colors.background}

############ MODULE BSPWM ############
[module/bspwm]
type = internal/bspwm

pin-workspaces = true
enable-click = true
enable-scroll = true

format = <label-state>

format-background = ${colors.background}
format-foreground = ${colors.foreground}

label-monitor = %name%

label-focused = 
label-focused-padding = 2
label-focused-foreground = ${colors.accent}
label-focused-background = ${colors.background}

label-occupied = 
label-occupied-padding = 2
label-occupied-foreground = ${colors.foreground}
label-occupied-background = ${colors.background}

label-urgent = 
label-urgent-padding = 2
label-urgent-foreground = ${colors.red}

label-empty = 
label-empty-padding = 2
label-empty-foreground = ${colors.black}
label-empty-background = ${colors.background}

